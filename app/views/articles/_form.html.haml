= form_for @article do |f|
  - if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :heading
    = f.text_field :heading
  .field
    = f.label :content
    = f.text_field :content
  .field
    = f.label :image
    = f.text_field :image
  .field
    = f.label :tags
    = f.text_field :tags
  .field
    = f.label :provider
    = f.text_field :provider
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :user_id
    = f.number_field :user_id
  .actions
    = f.submit 'Save'
